@model IEnumerable<Webtt.Models.Product>
@{
    ViewData["Title"] = "Tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<contents>
    <div class="w-clear wikis">
        <div class="w-clear">
            <div class="w-clear">
                <div class="main-tit">
                    <h2 class="name">@ViewBag.message</h2>
                </div>
            </div>
            <div class="w-clear box-share">
                <div class="addthis_native_toolbox">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="w-clear slick-slide slick-cloned" tabindex="-1" role="option" aria-describedby="slick-slide67"
                                 style="width: 202px;" data-slick-index="-5" aria-hidden="true">
                                <div class="box-sp w-clear">
                                    <a tabindex="-1" asp-action="Index" asp-controller="Detail" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName">
                                        <div class="images" style="text-align:center; height:178px">
                                            <img src="~/img/@item.ProductImage" alt="" style="max-height:100%; max-width:100%">
                                        </div>
                                    </a>
                                    <div class="info w-clear">
                                        <div class="w-clear">
                                            <a asp-action="Index" asp-controller="Detail" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName" tabindex="-1">
                                                <h3>
                                                    @item.ProductName
                                                </h3>
                                            </a>
                                            <div class="info-gia flex">
                                                <div class="gia">
                                                    Giá:
                                                    <span>@item.ProductPrice</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</contents>


