@model Webtt.Models.NewsModels

@{ ViewData["Title"] = "Thêm tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="container">
    <h1 class="add">Thêm tin tức</h1>
    <hr />
    <form asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <label class="label-form" style="font-weight:bold">Tiêu đề</label>
            </div>
            <div class="col-md-8">
                <input asp-for="NewsTitle" class="input-form" type="text" placeholder="Nhập tiêu đề">
                <span asp-validation-for="NewsTitle" class="text-danger" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label class="label-form" style="font-weight:bold">Hình ảnh</label>
            </div>
            <div class="col-md-8">
                <input asp-for="ItemImage" class="input-form" id="customFile" type="file">
                <span asp-validation-for="ItemImage" class="text-danger" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label class="label-form" style="font-weight:bold">Nội dung</label>
            </div>
            <div class="col-md-8">
                <input asp-for="NewsContent" class="input-form" type="text" placeholder="Nhập nội dung">
                <span asp-validation-for="NewsContent" class="text-danger" style="color:red"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <input class="submit-form" type="submit" value="Thêm">
        </div>
    </form>
    <div class="back">
        <a class="button-back" asp-action="Index">Trở về</a>
    </div>
</div>

