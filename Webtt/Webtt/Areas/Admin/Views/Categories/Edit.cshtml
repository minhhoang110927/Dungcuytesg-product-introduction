@model Webtt.Models.Category

@{ ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="container">
    <h1 class="add">Sửa danh mục</h1>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="row">
            <div class="col-md-4">
                <label class="label-form" style="font-weight:bold">Tên danh mục</label>
            </div>
            <div class="col-md-8">
                <input asp-for="CategoryName" class="input-form" type="text">
                <span asp-validation-for="CategoryName" class="text-danger" style="color:red"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <input class="submit-form" type="submit" value="Lưu">
        </div>
    </form>
    <div class="back">
        <a class="button-edit" asp-action="Index">Trở về</a>
    </div>
</div>